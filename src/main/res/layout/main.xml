<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget40"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bg"
              android:orientation="vertical"
	>


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:id="@+id/widget40"
	              android:layout_width="fill_parent"
	              android:layout_height="75px"
	              android:gravity="right"
	              android:orientation="horizontal">

		<TextView
			android:layout_width="400px"
			android:layout_height="wrap_content"
			android:text="@string/file_name"></TextView>
		<!-- 2011-7-28 进度条修改  修改起始点 -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		              android:id="@+id/layout"
		              android:layout_width="fill_parent"
		              android:layout_height="fill_parent"
		              android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/thin"
				android:textColor="#0F0F0F"
				android:textSize="10sp"/>

			<SeekBar
				android:id="@+id/seekBar"
				android:layout_width="100dip"
				android:layout_height="10dip"
				android:background="@drawable/bar"/>

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/thick"
				android:textColor="#0F0F0F"
				android:textSize="10sp"/>
		</LinearLayout>
		<!-- 修改截止点 -->
		<ImageButton
			android:id="@+id/buttonclose_ID"
			android:layout_width="20px"
			android:layout_height="20px"
			android:background="@drawable/close"></ImageButton>
	</LinearLayout>


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:id="@+id/widget40"
	              android:layout_width="fill_parent"
	              android:layout_height="fill_parent"
	              android:gravity="right"
	              android:orientation="horizontal">

		<com.project.sketchpad.view.SketchpadView
			android:id="@+id/SketchadView"
			android:layout_width="650px"
			android:layout_height="400px">"
		</com.project.sketchpad.view.SketchpadView>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		              android:id="@+id/widget40"
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              android:orientation="vertical">

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttonnew_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/newx"></Button>

				<Button
					android:id="@+id/buttonopen_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/openx"></Button>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttoncolor_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/colorx"></Button>

				<Button
					android:id="@+id/buttonsave_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/savex"></Button>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttonpen_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/penx"></Button>

				<Button
					android:id="@+id/buttoneraser_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/eraserx"></Button>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttonpaintpot_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/yqtx"></Button>

				<Button
					android:id="@+id/buttonspraygun_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/pqx"></Button>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttonoval_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/tyx"></Button>

				<Button
					android:id="@+id/buttonrect_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/cubex"></Button>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttonline_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/linex"></Button>

				<Button
					android:id="@+id/buttoncycle_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/circlex"></Button>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttonundo_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/undox"></Button>

				<Button
					android:id="@+id/buttonplygon_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/dbxx"></Button>
			</LinearLayout>


			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:id="@+id/widget40"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<Button
					android:id="@+id/buttonredo_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/redox"></Button>

				<Button
					android:id="@+id/buttonabout_ID"
					android:layout_width="50px"
					android:layout_height="50px"
					android:background="@drawable/gyx"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>


